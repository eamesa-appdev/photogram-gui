<h1>List of photos</h1>

<form action="/include_photo">
  <label for="newpic_input">Image</label>
  <input id="newpic_input" type="text" name="input_image" placeholder="Enter a URL for the image...">

  <label for="newpic_caption">Caption</label>
  <textarea id="newpic_caption" name="input_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="newpic_owner_id">Owner ID</label>
  <input id="newpic_owner_id" type="text" name="input_owner_id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>


<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |a_photo|%>
    <tr>
      <td>
        <img src="<%= a_photo.image %>">
      </td>
      <td>
        <%= a_photo.caption%>
      </td>
      <td>
        <%= a_photo.poster.username%>
      </td>
      <td>
        <%= a_photo.created_at%>
      </td>
      <td>
        <a href="/photos/<%= a_photo.id%>">
          Show details
        </a>
      </td>
    <%end%>
  </tr>
</table>
